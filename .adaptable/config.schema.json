{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "definitions": {
        "environment": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z_][a-zA-Z0-9_]*$": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "domain": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "pattern": "[A-Za-z][A-Za-z0-9-]*"
                },
                "domainName": {
                    "type": "string",
                    "format": "hostname"
                },
                "endpoint": {
                    "enum": ["main"]
                }
            },
            "required": ["domainName"]
        },
        "domains": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/domain"
            }
        },
        "resourceConfig": {
            "type": "object",
            "properties": {
                "vCpus": {
                    "anyOf": [{
                        "type": "number",
                        "exclusiveMinimum": 0,
                        "exclusiveMaximum": 1,
                        "multipleOf": 0.25
                    }, {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 4
                    }]
                },
                "memory": {
                    "type": "integer",
                    "minimum": 256,
                    "maximum": 32768,
                    "multipleOf": 256
                },
                "maxConcurrentRequestsPerInstance": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 1000
                },
                "maxInstances": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 1000
                },
                "minInstances": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 1000
                }
            }
        }
    },
    "properties": {
        "buildCommand": {
            "type": "string",
            "tags": ["go", "php"]
        },
        "buildEnvironment": {
            "$ref": "#/definitions/environment"
        },
        "builderType": {
            "enum": ["paketo", "dockerfile", "nixpacks"]
        },
        "databaseType": {
            "enum": ["mssql", "mongodb", "none", "postgres"]
        },
        "dockerfile": {
            "type": "string",
            "tags": ["dockerfile"]
        },
        "domains": {
            "$ref": "#/definitions/domains"
        },
        "environment": {
            "$ref": "#/definitions/environment"
        },
        "installCommand": {
            "type": "string",
            "tags": ["go", "php"]
        },
        "nodeRunScripts": {
            "type": "string",
            "tags": ["nodejs"]
        },
        "nodeStartScript": {
            "enum": ["start"],
            "tags": ["nodejs"]
        },
        "nodeVersion": {
            "enum": ["12", "14", "16", "18"],
            "tags": ["nodejs"]
        },
        "projectPath": {
            "type": "string",
            "tags": ["nodejs"]
        },
        "pythonVersion": {
            "enum": ["3.6", "3.7", "3.8", "3.9", "3.10", "3.11"],
            "tags": ["python"]
        },
        "repoSubdir": {
            "type": "string"
        },
        "resourceConfig": {
            "$ref": "#/definitions/resourceConfig"
        },
        "startCommand": {
            "type": "string",
            "tags": ["go", "nodejs", "php", "python"]
        }
    },
    "required": ["databaseType"]
}
