{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "definitions": {
        "environment": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z_][a-zA-Z0-9_]*$": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "buildEnvironment": {
            "$ref": "#/definitions/environment"
        },
        "databaseType": {
            "enum": ["mssql", "mongodb", "postgres"]
        },
        "environment": {
            "$ref": "#/definitions/environment"
        },
        "nodeRunScripts": {
            "type": "string"
        },
        "nodeStartScript": {
            "enum": ["start"]
        },
        "nodeVersion": {
            "enum": ["12", "14", "16"]
        },
        "projectPath": {
            "type": "string"
        }
    },
    "required": ["databaseType"]
}
