{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "definitions": {
        "environment": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z_][a-zA-Z0-9_]*$": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "buildEnvironment": {
            "$ref": "#/definitions/environment"
        },
        "databaseType": {
            "enum": ["mssql", "mongodb", "none", "postgres"]
        },
        "environment": {
            "$ref": "#/definitions/environment"
        },
        "nodeRunScripts": {
            "type": "string",
            "tags": ["nodejs"]
        },
        "nodeStartScript": {
            "enum": ["start"],
            "tags": ["nodejs"]
        },
        "nodeVersion": {
            "enum": ["12", "14", "16"],
            "tags": ["nodejs"]
        },
        "projectPath": {
            "type": "string",
            "tags": ["nodejs"]
        },
        "pythonVersion": {
            "enum": ["3.6", "3.7", "3.8", "3.9"],
            "tags": ["python"]
        },
        "startCommand": {
            "type": "string",
            "tags": ["python"]
        }
    },
    "required": ["databaseType"]
}
